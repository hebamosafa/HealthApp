<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/last"
    android:id="@+id/mlayout4"
    android:layout_width="match_parent"
    android:columnCount="3"
    android:rowCount="5"
    android:layout_margin="5dp"
    android:paddingTop="50dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:gravity="center"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/suger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:padding="20dp"

        android:layout_column="1"
        android:text="Waiting.." />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"

        android:padding="20dp"
        android:text="90-130" />

    <TextView
        android:id="@+id/Device_Type"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_row="0"
        android:layout_column="0"
        android:text="Device Type" />

    <TextView
        android:id="@+id/Range"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:paddingLeft="10dp"

        android:paddingBottom="10dp"
        android:text="Range(Min-Max)"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/Normal"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:text="Normal"
        android:textColor="@android:color/black"

        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/Heart_Rate"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingBottom="30dp"
        android:textColor="@android:color/black"
        android:padding="15dp"


        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="Heart_Rate" />

    <TextView
        android:id="@+id/blood_Sugar"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingBottom="30dp"
        android:textColor="@android:color/black"
        android:padding="15dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="blood_Sugar" />

    <TextView
        android:id="@+id/Body_Temperature"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingBottom="30dp"
        android:textColor="@android:color/black"
        android:padding="15dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Body_Temperature" />

    <TextView
        android:id="@+id/blood_Pressure"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingBottom="30dp"
        android:textColor="@android:color/black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:padding="15dp"

        android:layout_column="0"
        android:text="blood_Pressure" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:padding="20dp"
        android:text="37" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="2"

        android:padding="20dp"
        android:text="90-120" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:padding="20dp"

        android:layout_column="2"
        android:text="60-100" />

    <TextView
        android:id="@+id/heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:padding="20dp"

        android:layout_column="1"
        android:text="Waiting.." />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:padding="20dp"

        android:text="Waiting.." />

    <TextView
        android:id="@+id/pres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:padding="20dp"

        android:layout_column="1"
        android:text="Waiting.." />

</GridLayout>